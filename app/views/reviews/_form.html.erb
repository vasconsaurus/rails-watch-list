<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 my-5">
      <span class="material-icons-outlined">grade</span>
      <h5 class="mb-5">Review this list</h5>
      <%= simple_form_for [ list, review ] do |f| %>
        <%= f.input :comment, placeholder: "Enter a review about this list" %>
        <%= f.input :rating, as: :select, collection: (1..5) %>
        <div class="d-grid">
          <%= f.submit "Add new Review", class: 'btn btn-secondary'%>
          </div>
      <% end %>
    </div>
  </div>
</div>
