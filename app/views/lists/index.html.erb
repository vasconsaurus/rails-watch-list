<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>Watch List!</h1>
    <p>Make lists with your favorite movies</p>
    <a class="btn btn-flat" href="#"><%= link_to 'Create a new List', new_list_path(@list) %></a>  </div>
</div>

<table class='table'>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= link_to 'Show', list_path(list), class: 'btn btn-success' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
