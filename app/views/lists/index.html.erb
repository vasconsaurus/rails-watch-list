<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1616530940355-351fabd9524b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=735&q=80);">
  <div class="container">
      <h1>Watch List!</h1>
      <p>Make lists with your favorite movies</p>
      <%= link_to 'Create a new List', new_list_path(@list), class: 'btn btn-success' %>
  </div>
</div>

<div class="container">
  <div class="row mt-5">
    <% @lists.each do |list| %>
      <div class="col-12 col-md-6">
        <div class="card my-3">
          <%= cl_image_tag list.photo.key,
                              height: 150, crop: :thumb, gravity: :face %>
          <div class="card-body">
            <h3 class="card-title mt-2"><%= link_to list.name, list_path(list) %></h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
